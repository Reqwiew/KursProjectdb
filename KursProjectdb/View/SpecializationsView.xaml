<UserControl x:Class="KursProjectdb.View.SpecializationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KursProjectdb.View"
             xmlns:vm="clr-namespace:KursProjectdb.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             Style="{StaticResource Page_Style}">
    <UserControl.DataContext>
        <vm:SpecializtionViewModel />
    </UserControl.DataContext>
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Список специальностей" 
                   Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="2"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Left" Margin="5,8" Padding="3"
                   Style="{StaticResource Text_Style}"/>
       
        <TextBlock Text="Введите название"
                   Grid.Row="2" Grid.Column="0" Margin="5,8" Padding="3" 
                   Style="{StaticResource Text_Style}"/>
        
        <TextBlock Text="Выберите факультет"
                   Grid.Row="3" Grid.Column="0" Margin="5,8" Padding="3" 
                   Style="{StaticResource Text_Style}"/>
       
        <Border CornerRadius="5" BorderThickness="1" BorderBrush="Black" 
                Grid.Column="1" Grid.Row="2" Margin="5,8">
            <TextBox Background="Transparent" Foreground="White" Padding="3"
                     BorderThickness="0"
                     Text="{Binding Path=CurrentSpecialization.SpecializationTitle, Mode=TwoWay}"
                     Tag="Введите название специальности"/>
        </Border>
        
        <Border CornerRadius="5" BorderThickness="1" BorderBrush="Black" 
                Grid.Column="1" Grid.Row="3" Margin="5,8">
            <ComboBox SelectedItem="{Binding SelectedFaculty, Mode=TwoWay}"
                      ItemsSource="{Binding FacList}"
                      DisplayMemberPath="FacultyName"
                      SelectedValuePath="Id"/>
        </Border>
        
        <!-- Кнопки операций -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" Margin="5,8">
            <Button Name="btnAdd" Content="Добавить" Padding="1" 
                    Width="100"
                    Height="30"
                    Command="{Binding Path=SaveCommand}"
                    Style="{StaticResource AddButtonStyle}"/>
    
            <Button Name="btnUpdate" Content="Обновить" Padding="1"
                    Command="{Binding Path=UpdateCommand}"
                    Width="100"
                    Height="30"
                    Style="{StaticResource UpdateButtonStyle}"/>
    
            <Button Name="btnDelete" Content="Удалить" Padding="1"
                    Width="100"
                    Height="30"
                    Command="{Binding Path=DeleteCommand}"
                    Style="{StaticResource DeleteButtonStyle}"/>
        </StackPanel>
        
        <!-- Сообщения -->
        <TextBlock Name="txtBlockMessage" Grid.Row="5" Grid.Column="1" Margin="5,8" Padding="3" 
                   Foreground="White" Text="{Binding Path=Message}" 
                   Style="{StaticResource Text_Style}"/>
        
        <!-- DataGrid -->
        <DataGrid Name="dgSpecialization" AutoGenerateColumns="False"
                  Grid.Row="6" Grid.Column="0" Margin="5,8" Padding="3" Grid.ColumnSpan="2"
                  ItemsSource="{Binding Path=SpecList, Mode=TwoWay}" 
                  SelectedItem="{Binding CurrentSpecialization}"
                  Style="{StaticResource ModernDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="auto" Binding="{Binding Path=Id}"/>
                <DataGridTextColumn Header="Название Специальности" Width="400" 
                                    Binding="{Binding Path=SpecializationTitle}"/>
                <DataGridTextColumn Header="Название Факультета" Width="400" 
                                    Binding="{Binding Path=FacultyName}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>