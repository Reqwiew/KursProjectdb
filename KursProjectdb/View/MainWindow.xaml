<Window x:Class="KursProjectdb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KursProjectdb"
        xmlns:viewModel="clr-namespace:KursProjectdb.ViewModel"
        xmlns:Menu="clr-namespace:KursProjectdb.Utills"
        xmlns:styles="clr-namespace:KursProjectdb.Styles"
        mc:Ignorable="d"
        Title="Магазин" Height="800" Width="1300"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">
    <Window.DataContext>
        <viewModel:NavigationViewModel/>
    </Window.DataContext>
    <Grid>
        <Border Background="#212529"
                CornerRadius="20" />
        <Grid>

            <!--// Base Grid //-->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270" />
                <ColumnDefinition Width="1000" />
            </Grid.ColumnDefinitions>

            <!--// Navigation Panel //-->

            <Grid HorizontalAlignment="Left"
                  Width="270">

                <Border Background="#272B2F"
                        CornerRadius="20,0,0,20" />

                <StackPanel Height="800"
                            Width="270">
                    <!--// Home //-->

                    <styles:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding HomeCommand}"
                              IsChecked="True">

                        <Grid>

                            <Image Source="/Assets/img_home.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Домой"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </styles:Btn>
                    
                    <styles:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding SubjectCommand}">

                        <Grid>

                            <Image Source="/Assets/img_customer.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Предметы"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </styles:Btn>
                  

                    <styles:Btn Style="{StaticResource BtnStyle}"
            Command="{Binding FacultyCommand}">

                        <Grid>

                            <Image Source="/Assets/img_order.png"
                 Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Факультет"
                     Style="{StaticResource Text_Style}" />

                        </Grid>


                    </styles:Btn>
                    
                    <styles:Btn Style="{StaticResource BtnStyle}"
                                Command="{Binding TeacherCommand}">

                        <Grid>

                            <Image Source="/Assets/img_order.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Преподаватели"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </styles:Btn>
                    
                    <styles:Btn Style="{StaticResource BtnStyle}"
                                Command="{Binding SpecializationCommand}">

                        <Grid>

                            <Image Source="/Assets/img_order.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Специальности"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </styles:Btn>

                    <styles:Btn Style="{StaticResource BtnStyle}"
                                Command="{Binding GroupCommand}">

                        <Grid>

                            <Image Source="/Assets/img_order.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Группы"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </styles:Btn>

                    <styles:Btn Style="{StaticResource BtnStyle}"
                                Command="{Binding StudentCommand}">

                        <Grid>

                            <Image Source="/Assets/img_order.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Студенты"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </styles:Btn>
                    
                    <styles:Btn Style="{StaticResource BtnStyle}"
                                Command="{Binding AcademicPlanCommand}">

                        <Grid>

                            <Image Source="/Assets/img_order.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Академический план"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </styles:Btn>
                    
                    <styles:Btn Style="{StaticResource BtnStyle}"
                                Command="{Binding AcademicPerformanceCommand}">

                        <Grid>

                            <Image Source="/Assets/img_order.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Успеваемость"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </styles:Btn>
                    
                </StackPanel>
                

                
                
            </Grid>

            <Grid Grid.Column="1" Width="1000">

                <ContentControl x:Name="Pages"
                                Content="{Binding CurrentView}" />

            </Grid>

        </Grid>

        <Button x:Name="CloseApp"
                Style="{StaticResource ExitApp}" Click=" CloseApp_Click"/>
    </Grid>
</Window>
