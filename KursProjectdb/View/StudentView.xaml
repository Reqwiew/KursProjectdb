<UserControl x:Class="KursProjectdb.View.StudentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KursProjectdb.View"
             xmlns:vm="clr-namespace:KursProjectdb.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Style="{StaticResource Page_Style}">
    <UserControl.DataContext>
        <vm:StudentViewModel />
    </UserControl.DataContext>
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/> <!-- Новая колонка для карточки -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/> 
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <TextBlock Text="Список студентов" 
                   Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="2"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Left" Margin="5,8" Padding="3"
                   Style="{StaticResource Text_Style}"/>
       
        <!-- Поля ввода -->
        <TextBlock Text="Введите имя"
                   Grid.Row="1" Grid.Column="0" Margin="5,8" Padding="3" 
                   Style="{StaticResource Text_Style}"/>
        
        <TextBlock Text="Введите дату рождения"
                   Grid.Row="2" Grid.Column="0" Margin="5,8" Padding="3" 
                   Style="{StaticResource Text_Style}"/>
        
        <TextBlock Text="Введите пол"
                   Grid.Row="3" Grid.Column="0" Margin="5,8" Padding="3" 
                   Style="{StaticResource Text_Style}"/>
                   
        <TextBlock Text="Выберите группу"
                   Grid.Row="4" Grid.Column="0" Margin="5,8" Padding="3" 
                   Style="{StaticResource Text_Style}"/>
       
        <!-- Элементы управления -->
        <Border CornerRadius="5" BorderThickness="1" BorderBrush="Black" 
                Grid.Column="1" Grid.Row="1" Margin="5,8">
            <TextBox Background="Transparent" Foreground="White" Padding="3"
                     BorderThickness="0"
                     Text="{Binding Path=CurrentStudent.FullName, Mode=TwoWay}"
                     Tag="Введите имя студента"/>
        </Border>
        
        <Border CornerRadius="5" BorderThickness="1" BorderBrush="Black" Grid.Column="1"
                Grid.Row="2" Margin="5,8">
            <DatePicker Background="White" Foreground="Black" Padding="3"
                        BorderThickness="0" SelectedDate="{Binding Path=CurrentStudent.Birthday, Mode=TwoWay}"/>
        </Border>
        <Border CornerRadius="5" BorderThickness="1" BorderBrush="Black" 
                Grid.Column="1" Grid.Row="3" Margin="5,8">
            <TextBox Background="Transparent" Foreground="White" Padding="3"
                     BorderThickness="0"
                     Text="{Binding Path=CurrentStudent.Gender, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>
        <Border CornerRadius="5" BorderThickness="1" BorderBrush="Black" 
                Grid.Column="1" Grid.Row="4" Margin="5,8">
            <ComboBox SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"
                      ItemsSource="{Binding GroupList}"
                      DisplayMemberPath="SpecializationTitle"
                      SelectedValuePath="Id"/>
        </Border>
        
        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1" Margin="5,8">
            <Button Name="btnAdd" Content="Добавить" Padding="1" 
                    Width="100"
                    Height="30"
                    Command="{Binding Path=SaveCommand}"
                    Style="{StaticResource AddButtonStyle}"/>
    
            <Button Name="btnUpdate" Content="Обновить" Padding="1"
                    Command="{Binding Path=UpdateCommand}"
                    Width="100"
                    Height="30"
                    Style="{StaticResource UpdateButtonStyle}"/>
    
            <Button Name="btnDelete" Content="Удалить" Padding="1"
                    Width="100"
                    Height="30"
                    Command="{Binding Path=DeleteCommand}"
                    Style="{StaticResource DeleteButtonStyle}"/>
        </StackPanel>
        
        <!-- Сообщения -->
        <TextBlock Name="txtBlockMessage" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,8" Padding="3" 
                   Foreground="White" Text="{Binding Path=Message}" 
                   Style="{StaticResource Text_Style}"/>
        
        <!-- DataGrid -->
        <DataGrid Name="dgStudents" AutoGenerateColumns="False"
                  Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,8"
                  ItemsSource="{Binding Path=StudList, Mode=TwoWay}" 
                  SelectedItem="{Binding CurrentStudent}"
                  Style="{StaticResource ModernDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding Path=Id}"/>
                <DataGridTextColumn Header="Имя студента" Width="*" 
                                    Binding="{Binding Path=FullName}"/>
                <DataGridTextColumn Header="Дата рождения" Width="Auto" 
                                    Binding="{Binding Path=Birthday, StringFormat=\{0:dd.MM.yyyy\}}"/>
                <DataGridTextColumn Header="Пол" Width="*" 
                                    Binding="{Binding Path=Gender}"/>
                <DataGridTextColumn Header="Группа" Width="*" 
                                    Binding="{Binding Path=GroupName}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- КАРТОЧКА СТУДЕНТА - справа от таблицы -->
        <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="8"
                Margin="20,0,10,0" 
                Background="#FF2D2D30" 
                BorderBrush="LightGray" 
                BorderThickness="1"
                CornerRadius="5"
                VerticalAlignment="Top">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock Text="Личная карточка" 
                               FontWeight="Bold" 
                               FontSize="16" 
                               Margin="0,0,0,10" 
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    
                    <Border Height="1" Background="LightGray" Margin="0,0,0,10"/>
                    
                    <!-- Фото студента (заглушка) -->
                   
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="ФИО:" Grid.Row="0" Grid.Column="0" Margin="0,5" Style="{StaticResource Text_Style}"/>
                        <TextBlock Text="{Binding CurrentStudent.FullName}" Grid.Row="0" Grid.Column="1" Margin="5,5" Style="{StaticResource Text_Style}" FontWeight="SemiBold"/>

                        <TextBlock Text="Дата рождения:" Grid.Row="1" Grid.Column="0" Margin="0,5" Style="{StaticResource Text_Style}"/>
                        <TextBlock Text="{Binding CurrentStudent.Birthday, StringFormat=\{0:dd.MM.yyyy\}}" Grid.Row="1" Grid.Column="1" Margin="5,5" Style="{StaticResource Text_Style}"/>

                        <TextBlock Text="Пол:" Grid.Row="2" Grid.Column="0" Margin="0,5" Style="{StaticResource Text_Style}"/>
                        <TextBlock Text="{Binding CurrentStudent.Gender}" Grid.Row="2" Grid.Column="1" Margin="5,5" Style="{StaticResource Text_Style}"/>

                        <TextBlock Text="Группа:" Grid.Row="3" Grid.Column="0" Margin="0,5" Style="{StaticResource Text_Style}"/>
                        <TextBlock Text="{Binding CurrentStudent.GroupName}" Grid.Row="3" Grid.Column="1" Margin="5,5" Style="{StaticResource Text_Style}" FontWeight="SemiBold"/>

                        <TextBlock Text="ID:" Grid.Row="4" Grid.Column="0" Margin="0,5" Style="{StaticResource Text_Style}"/>
                        <TextBlock Text="{Binding CurrentStudent.Id}" Grid.Row="4" Grid.Column="1" Margin="5,5" Style="{StaticResource Text_Style}" Foreground="LightGray"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>